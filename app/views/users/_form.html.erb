<%= form_for(@user) do |f| %>
  <div data-role="fieldcontain" class="ui-hide-label">
    <%= f.label :codigo %>
    <%= f.text_field :codigo, 'placeholder' => 'codigo' %>
  </div>
  <div data-role="fieldcontain" class="ui-hide-label">
    <%= f.label :password %>
    <%= f.password_field :password, 'placeholder' => 'password' %>
  </div>

  <div data-role="fieldcontain" class="actions">
    <%= f.submit "Log in"%>
  </div>
<% end %>
