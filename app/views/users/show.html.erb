<ul data-role="listview" data-theme="c">
	<li><img src="<%= @info.pic %>" class="ui-li-thumb">
	<h3><%= @info.fullname %></h3>
	<p><%= @info.esp %></p>
	<p>Ciclo relativo : <%= dar_formato @info.ciclo %></p></li>
</ul>
<br/>
<% if @cursos.size != nil %>
	<% @cursos.each do |c|%>
		<div data-role="collapsible" data-content-theme="a">
		   <h3><%= pretty(c[:curso])+" "+c[:codigo]+c[:seccion] %></h3>
		   <%= c[:html] %>
		</div>
	<% end %>
<% end %>
<% unless facebook_app %>
<div data-role="navbar">
	<ul>
		<li><%= link_to 'Sign out', @user, confirm: "Quieres destruir tu session como #{@info.fullname}?", method: :delete, 'data-role' => 'button', 'data-icon' => "delete", 'data-theme' => 'b' %></li>
	</ul>
</div>
<% end %>

